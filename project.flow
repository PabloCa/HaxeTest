{
  project: {
    name: 'BasicTemplate',
    version: '1.0.0',
    author: 'Citizen of Melee',

    app: {
      name: 'basictemplate',
      package: 'io.itch.citizenofmelee'
    },

    build: {
      dependencies: {
        luxe: '*',
        mint : '*',
        dconsole : '*'
      },
      "flags": [
        // These flags are needed
        //"-D haxeJSON",

        // Disable before release
        // this enables the console and debug commands
        "-debug",

        // Set for number of controller-enabled players
        // (0 if this will be mouse controlled)
        "-D CONTROLLERS=4"
      ],
      hxcpp: {
        flags: []
      }
    },

    files : {
      config: 'config.json',
      assets: 'assets/'
    }
  }
}
